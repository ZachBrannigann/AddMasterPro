<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AddMasterPro.MainPage">

    <StackLayout Padding="20,40,20,20" Spacing="25">
              <Label Text="First Number" FontFamily="Palatino" FontSize="30"/>
              <Border StrokeThickness="1" Stroke="Gray">
                <Entry x:Name="txtFirstNumber" Keyboard="Numeric" FontFamily="Palatino" FontSize="25"/>
              </Border>
              
              <Label Text="Second Number" FontFamily="Palatino" FontSize="30"/>
              <Border StrokeThickness="1" Stroke="Gray">
                <Entry x:Name="txtSecondNumber" Keyboard="Numeric" FontFamily="Palatino" FontSize="25"/>
              </Border>
              <Label x:Name="lblDisplay" Text="0" FontFamily="Palatino" Padding="0,60" 
                     HorizontalOptions="Center" FontSize="75"/>
              
              <Button Text="Add" Clicked="Add"/>
              <Button Text="Clear" Clicked="Clear"/>
        
        
    </StackLayout>

</ContentPage>
